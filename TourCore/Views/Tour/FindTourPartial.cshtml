<style>
    .search-form {
        text-align: center;
        margin-bottom: 20px;
    }

        .search-form input[type="text"] {
            height: 40px;
            width: 300px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        .search-form input[type="submit"] {
            height: 40px;
            padding: 0 20px;
            background-color: #27A4F2;
            color: #333;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            .search-form input[type="submit"]:hover {
                background-color: #A27A4F2; /* Màu tối hơn khi hover */
            }
</style>

@using (Html.BeginForm("FindTour", "Tour", FormMethod.Post, new { @class = "search-form" }))
{
    @Html.TextBox("nameTour", null, new { @placeholder = "Nhập địa điểm bạn muốn tới (ví dụ: Nha Trang)" })
    <input type="submit" value="Tìm kiếm" />
    @Html.AntiForgeryToken() <!-- Thêm token chống giả mạo -->
}